<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        tools:context="com.namaltechnologysolutions.bunny.bookbank.Fragment.User_Profile_Fragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_user_profile" />

            <ImageView
                android:id="@+id/profileImageChooser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userProfile"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="-30dp"
                android:layout_toEndOf="@+id/userProfile"
                android:src="@drawable/ic_profile_image"

                />

            <ProgressBar
                android:id="@+id/userProfileProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_user_icon_1" />

            <EditText
                android:id="@+id/userProfileName"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:gravity="center"
                android:hint="@string/Name"
                android:inputType="text" />

            <ImageView
                android:id="@+id/editProfileName"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:padding="8dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/userProfilePassword"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:gravity="center"
                android:hint="@string/Password"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/editProfilePassword"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:padding="8dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_location_2" />

            <EditText
                android:id="@+id/userProfileLocation"
                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:gravity="center"
                android:hint="@string/Select_city"
                android:inputType="text" />

            <ImageView
                android:id="@+id/editProfileCity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/gray"
                android:padding="8dp"
                android:src="@drawable/ic_edit" />
        </LinearLayout>

        <Button
            android:id="@+id/userProfileUpdateButton"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/skyColor"
            android:text="@string/update"
            android:textColor="@color/white" />
    </LinearLayout>


</ScrollView>